generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Repair {
  id            String   @id @default(uuid())
  customerName  String
  customerPhone String
  brand         String
  model         String
  problem       String
  estimatedCost Float
  advancePaid   Float   @default(0)
  status        String  @default("NEW")
  createdAt     DateTime @default(now())
}
